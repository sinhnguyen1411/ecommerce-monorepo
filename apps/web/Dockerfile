FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json ./
RUN npm install

FROM node:20-alpine AS dev
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
ENV NODE_ENV=development
EXPOSE 3000
CMD ["npm", "run", "dev"]

FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_SITE_NAME
ARG NEXT_PUBLIC_FREE_SHIPPING
ARG NEXT_PUBLIC_MIN_ORDER
ARG NEXT_PUBLIC_SOCIAL_FACEBOOK
ARG NEXT_PUBLIC_SOCIAL_MESSENGER
ARG NEXT_PUBLIC_SOCIAL_ZALO
ARG NEXT_PUBLIC_COMPANY_PHONE
ARG NEXT_PUBLIC_COMPANY_EMAIL
ARG NEXT_PUBLIC_COMPANY_ADDRESS
ARG NEXT_PUBLIC_SITE_URL
ARG NEXT_PUBLIC_LOCALE
ARG NEXT_PUBLIC_CURRENCY
ARG NEXT_PUBLIC_BANK_NAME
ARG NEXT_PUBLIC_BANK_ACCOUNT
ARG NEXT_PUBLIC_BANK_HOLDER
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_SITE_NAME=$NEXT_PUBLIC_SITE_NAME
ENV NEXT_PUBLIC_FREE_SHIPPING=$NEXT_PUBLIC_FREE_SHIPPING
ENV NEXT_PUBLIC_MIN_ORDER=$NEXT_PUBLIC_MIN_ORDER
ENV NEXT_PUBLIC_SOCIAL_FACEBOOK=$NEXT_PUBLIC_SOCIAL_FACEBOOK
ENV NEXT_PUBLIC_SOCIAL_MESSENGER=$NEXT_PUBLIC_SOCIAL_MESSENGER
ENV NEXT_PUBLIC_SOCIAL_ZALO=$NEXT_PUBLIC_SOCIAL_ZALO
ENV NEXT_PUBLIC_COMPANY_PHONE=$NEXT_PUBLIC_COMPANY_PHONE
ENV NEXT_PUBLIC_COMPANY_EMAIL=$NEXT_PUBLIC_COMPANY_EMAIL
ENV NEXT_PUBLIC_COMPANY_ADDRESS=$NEXT_PUBLIC_COMPANY_ADDRESS
ENV NEXT_PUBLIC_SITE_URL=$NEXT_PUBLIC_SITE_URL
ENV NEXT_PUBLIC_LOCALE=$NEXT_PUBLIC_LOCALE
ENV NEXT_PUBLIC_CURRENCY=$NEXT_PUBLIC_CURRENCY
ENV NEXT_PUBLIC_BANK_NAME=$NEXT_PUBLIC_BANK_NAME
ENV NEXT_PUBLIC_BANK_ACCOUNT=$NEXT_PUBLIC_BANK_ACCOUNT
ENV NEXT_PUBLIC_BANK_HOLDER=$NEXT_PUBLIC_BANK_HOLDER
RUN npm run build

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_SITE_NAME
ARG NEXT_PUBLIC_FREE_SHIPPING
ARG NEXT_PUBLIC_MIN_ORDER
ARG NEXT_PUBLIC_SOCIAL_FACEBOOK
ARG NEXT_PUBLIC_SOCIAL_MESSENGER
ARG NEXT_PUBLIC_SOCIAL_ZALO
ARG NEXT_PUBLIC_COMPANY_PHONE
ARG NEXT_PUBLIC_COMPANY_EMAIL
ARG NEXT_PUBLIC_COMPANY_ADDRESS
ARG NEXT_PUBLIC_SITE_URL
ARG NEXT_PUBLIC_LOCALE
ARG NEXT_PUBLIC_CURRENCY
ARG NEXT_PUBLIC_BANK_NAME
ARG NEXT_PUBLIC_BANK_ACCOUNT
ARG NEXT_PUBLIC_BANK_HOLDER
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_SITE_NAME=$NEXT_PUBLIC_SITE_NAME
ENV NEXT_PUBLIC_FREE_SHIPPING=$NEXT_PUBLIC_FREE_SHIPPING
ENV NEXT_PUBLIC_MIN_ORDER=$NEXT_PUBLIC_MIN_ORDER
ENV NEXT_PUBLIC_SOCIAL_FACEBOOK=$NEXT_PUBLIC_SOCIAL_FACEBOOK
ENV NEXT_PUBLIC_SOCIAL_MESSENGER=$NEXT_PUBLIC_SOCIAL_MESSENGER
ENV NEXT_PUBLIC_SOCIAL_ZALO=$NEXT_PUBLIC_SOCIAL_ZALO
ENV NEXT_PUBLIC_COMPANY_PHONE=$NEXT_PUBLIC_COMPANY_PHONE
ENV NEXT_PUBLIC_COMPANY_EMAIL=$NEXT_PUBLIC_COMPANY_EMAIL
ENV NEXT_PUBLIC_COMPANY_ADDRESS=$NEXT_PUBLIC_COMPANY_ADDRESS
ENV NEXT_PUBLIC_SITE_URL=$NEXT_PUBLIC_SITE_URL
ENV NEXT_PUBLIC_LOCALE=$NEXT_PUBLIC_LOCALE
ENV NEXT_PUBLIC_CURRENCY=$NEXT_PUBLIC_CURRENCY
ENV NEXT_PUBLIC_BANK_NAME=$NEXT_PUBLIC_BANK_NAME
ENV NEXT_PUBLIC_BANK_ACCOUNT=$NEXT_PUBLIC_BANK_ACCOUNT
ENV NEXT_PUBLIC_BANK_HOLDER=$NEXT_PUBLIC_BANK_HOLDER
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json
EXPOSE 3000
CMD ["npm", "start"]
